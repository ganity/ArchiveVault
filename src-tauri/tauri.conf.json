{
  "$schema": "https://schema.tauri.app/config/2.0.0-rc",
  "productName": "ArchiveVault",
  "version": "0.1.0",
  "identifier": "com.ganily.archivevault",
  "build": {
    "devUrl": "http://localhost:5173",
    "frontendDist": "../frontend/dist",
    "beforeDevCommand": "npm --prefix frontend run dev || npm --prefix ../frontend run dev || npm run dev",
    "beforeBuildCommand": "npm --prefix frontend run build || npm --prefix ../frontend run build || npm run build"
  },
  "app": {
    "withGlobalTauri": true,
    "windows": [
      {
        "title": "ArchiveVault",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null,
      "assetProtocol": {
        "enable": true,
        "scope": [
          "**"
        ]
      }
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
